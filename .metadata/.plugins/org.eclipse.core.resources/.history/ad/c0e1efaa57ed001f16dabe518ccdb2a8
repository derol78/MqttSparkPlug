package org.sample.mavensample;
import org.eclipse.paho.client.mqttv3.*;
import com.cirruslink.sparkplug.client.SparkplugClient;
import com.cirruslink.sparkplug.client.SparkplugDecode;
import com.cirruslink.sparkplug.message.SparkplugBPayload;
import com.cirruslink.sparkplug.message.protobuf.SparkplugBProto;

public class MqttTahuSubscriber {

    public static void main(String[] args) {
        String broker = "tcp://mqtt.example.com:1883";
        String clientId = "JavaSample";
        String topic = "spBv1.0/mygroup/NCMD/+/+/+";

        try {
            MqttClient client = new MqttClient(broker, clientId);
            MqttConnectOptions connOpts = new MqttConnectOptions();
            connOpts.setCleanSession(true);

            System.out.println("Connecting to broker: " + broker);
            client.connect(connOpts);
            System.out.println("Connected");

            client.subscribe(topic, new IMqttMessageListener() {
                @Override
                public void messageArrived(String topic, MqttMessage message) throws Exception {
                    byte[] payload = message.getPayload();

                    try {
                        SparkplugBProto.Payload decodedPayload = SparkplugBProto.Payload.parseFrom(payload);
                        System.out.println("Received message: " + decodedPayload.toString());
                    } catch (Exception e) {
                        System.out.println("Failed to decode message: " + e.getMessage());
                    }
                }
            });

            System.out.println("Subscribed to topic: " + topic);
        } catch (MqttException me) {
            System.out.println("reason " + me.getReasonCode());
            System.out.println("msg " + me.getMessage());
            System.out.println("loc " + me.getLocalizedMessage());
            System.out.println("cause " + me.getCause());
            System.out.println("excep " + me);
            me.printStackTrace();
        }
    }
}
